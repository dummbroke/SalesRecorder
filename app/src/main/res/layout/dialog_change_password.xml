<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="100dp">

    <EditText
        android:id="@+id/oldpinEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Current PIN"
        android:inputType="numberPassword"
        android:maxLength="4" />

    <EditText
        android:id="@+id/pinEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter New PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/confirmPinEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm New PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/showPinCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show PIN"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/forgotPinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Forgot PIN?"
            android:textColor="@android:color/holo_blue_light" />

    </RelativeLayout>



    <Button
        android:id="@+id/setChangePassConfirmBtn"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Confirm"
        android:layout_marginLeft="90dp"/>

</LinearLayout>
