<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="#f5e7dc">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menuToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#d9a678"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="Sales Recorder"
        app:titleMarginStart="140dp"
        app:titleTextColor="@color/black"
        tools:ignore="MissingConstraints">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    
            <ImageButton
                android:id="@+id/imgBtnFish"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/salesicon"
                app:layout_constraintEnd_toStartOf="@+id/imgBtnHelpSupport"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgBtnHelpSupport"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/helpsupport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgBtnAboutUs"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="33dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aboutus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="81dp"
                android:text="Sales"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnFish" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Support"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.714"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnHelpSupport" />

            <ImageButton
                android:id="@+id/imgBtnBT"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bluetooth"
                app:layout_constraintEnd_toStartOf="@+id/imgBtnAboutUs"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


            <TextView
                android:id="@+id/txtGetData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Records"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnData" />

            <ImageButton
                android:id="@+id/imgBtnData"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/getdata"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBT" />

            <TextView
                android:id="@+id/txtBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:text="Bluetooth"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/txtBT2"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnBT" />

            <TextView
                android:id="@+id/txtBT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="53dp"
                android:text="About Us"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnAboutUs" />

            <ImageButton
                android:id="@+id/imgBtnSettings"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_inventory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgBtnAccount"
                app:layout_constraintTop_toBottomOf="@+id/txtBT2" />

            <ImageButton
                android:id="@+id/imgBtnMyAccount"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_bg"
                android:padding="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/myaccount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtGetData" />

            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="40dp"
                android:text="My Account"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnMyAccount" />

            <TextView
                android:id="@+id/txtSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="40dp"
                android:text="Inventory"
                android:textColor="#6d4c41"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/txtGetData"
                app:layout_constraintTop_toBottomOf="@+id/imgBtnSettings"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</RelativeLayout>
